{
  "name": "Midea 170L Heat Pump",
  "model": "HP170 / RSJ-15/190RDN3-C",
  "manufacturer": "Midea/Chromagen",
  "version": "1.0",
  "description": "Default configuration for Midea 170L heat pump water heater",
  "created": "2024-01-01T00:00:00",
  "author": "Integration Default",
  
  "connection": {
    "port": 502,
    "modbus_unit": 1,
    "scan_interval": 60
  },
  
  "registers": {
    "power": 0,
    "mode": 1,
    "current_temp": 102,
    "target_temp": 2,
    "tank_top_temp": 101,
    "tank_bottom_temp": 102,
    "condensor_temp": 103,
    "outdoor_temp": 104,
    "exhaust_temp": 105,
    "suction_temp": 106
  },
  
  "mode_values": {
    "eco": 1,
    "performance": 2,
    "electric": 4
  },
  
  "scaling": {
    "current_temp": {
      "offset": -15.0,
      "scale": 0.5
    },
    "target_temp": {
      "offset": 0.0,
      "scale": 1.0
    },
    "sensors": {
      "offset": -15.0,
      "scale": 0.5
    }
  },
  
  "temp_limits": {
    "eco": {
      "min": 60,
      "max": 65
    },
    "performance": {
      "min": 60,
      "max": 70
    },
    "electric": {
      "min": 60,
      "max": 70
    }
  },
  
  "defaults": {
    "target_temperature": 65,
    "enable_additional_sensors": true
  }
}